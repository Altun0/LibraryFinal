
@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            font-family: "Lato", sans-serif;
        }

        .sidebar {
            height: 100%;
            width: 240px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #111;
            overflow-x: hidden;
            padding-top: 16px;
        }

            .sidebar a {
                padding: 6px 8px 6px 16px;
                text-decoration: none;
                font-size: 20px;
                color: #818181;
                display: block;
            }

                .sidebar a:hover {
                    color: #0094ff;
                }

        .main {
            margin-left: 240px; /* Same as the width of the sidenav */
            padding: 0px 10px;
        }

        @@media screen and (max-height: 450px) {
            .sidebar {
                padding-top: 15px;
            }

                .sidebar a {
                    font-size: 18px;
                }
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <a href="#"><i class="glyphicon glyphicon-home">&nbsp;Ana Sayfa </i></a>
        <a href="/Kategori/Index/"><i class="glyphicon glyphicon-list">&nbsp;Kategoriler </i></a>
        <a href="/Kitap/Index/"><i class="glyphicon glyphicon-book">&nbsp;Kitaplar </i></a>
        <a href="/Yazar/Index/"><i class="glyphicon glyphicon-pencil">&nbsp;Yazarlar </i></a>
        <a href="/Uye/Index/"><i class="glyphicon glyphicon-user">&nbsp;Uyeler </i></a>
        <a href="/Personel/Index/"><i class="glyphicon glyphicon-tower">&nbsp;Personeller </i></a>
        <a href="/Odunc/OduncVer"><i class="glyphicon glyphicon-circle-arrow-right">&nbsp;Odunc Kitap Ver </i></a>
        <a href="/Odunc/Index/"><i class="glyphicon glyphicon-circle-arrow-left">&nbsp;Odunc Kitap Al </i></a>
        <a href="/istatistik/Index/"><i class="glyphicon glyphicon-sort">&nbsp;Istatistikler </i></a>
        <a href="#"><i class="glyphicon glyphicon-euro">&nbsp;Kasa </i></a>
        <a href="#"><i class="glyphicon glyphicon-dashboard">&nbsp;Islemler </i></a>
        <a href="/istatistik/Hava/"><i class="glyphicon glyphicon-cloud">&nbsp;Hava Raporu </i></a>
        <a href="/istatistik/Galeri/"><i class="glyphicon glyphicon-picture">&nbsp;Galeri </i></a>
        <a href="/Vitrin/Index/"><i class="glyphicon glyphicon-gift">&nbsp;Vitrin </i></a>
        <a href="#"><i class="glyphicon glyphicon-cog">&nbsp;Ayarlar </i></a>
        <a href="#"><i class="glyphicon glyphicon-phone">&nbsp;Yardim </i></a>
        <a href="#"><i class="glyphicon glyphicon-remove-sign">&nbsp;Cikis </i></a>

    </div>

    <div class="main">
        @RenderBody()
    </div>

</body>
</html>

